# https://www.open-scap.org/security-policies/scap-security-guide
oscap info /usr/share/xml/scap/ssg/content/ssg-ol8-ds.xml
oscap xccdf eval --profile xccdf_org.ssgproject.content_profile_stig --results-arf arf.xml --report report.html /usr/share/xml/scap/ssg/content/ssg-ol8-ds.xml
oscap xccdf eval --profile xccdf_org.ssgproject.content_profile_stig --results results.xml --report report.html /usr/share/xml/scap/ssg/content/ssg-ol8-ds.xml

